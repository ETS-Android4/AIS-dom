<?xml version="1.0" encoding="utf-8"?>
<com.redbooth.WelcomePageLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/welcome_page"
    tools:background="@color/page1">

    <RelativeLayout
        android:id="@+id/rocket"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="6dp"
        app:view_behavior="com.redbooth.wizard.AnimationLaunch"
        android:clipToPadding="false">

        <ImageView
            android:id="@+id/rocket_flame"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rocket_figure"
            android:layout_marginTop="-45dp"
            android:layout_alignStart="@+id/rocket_figure"
            android:layout_alignEnd="@+id/rocket_figure"
            android:layout_marginEnd="10dp"
            android:alpha="1"
            android:src="@drawable/rocket_flame"
            android:transformPivotY="0dp"
            android:contentDescription="@string/todo" />

        <ImageView
            android:id="@+id/rocket_figure"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:background="@drawable/rocket_large"
            android:contentDescription="@string/todo" />

    </RelativeLayout>

    <TextView
        android:id="@+id/title"
        style="@style/text_title"
        android:layout_above="@+id/avatar_ais_logo_page1"
        android:layout_marginBottom="9dp"
        android:text="@string/wizard_step_1_title"/>


    <ImageView
        android:id="@+id/avatar_ais_logo_page1"
        android:layout_width="50dp"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/ic_ais_logo_small_white"
        android:contentDescription="@string/todo"
        android:scaleX="0"
        android:scaleY="0" />

</com.redbooth.WelcomePageLayout>

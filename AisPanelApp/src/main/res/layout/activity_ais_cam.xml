<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:keepScreenOn="true"
    android:background="@android:color/background_dark">



    <org.videolan.libvlc.util.VLCVideoLayout
        android:id="@+id/video_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="false">

        <TextView
            android:id="@+id/sipLabel"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="45dp"
            android:layout_marginRight="45dp"
            android:text="AIS"
            android:textAlignment="center"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/avatar1"
            tools:ignore="RtlCompat" />

        <Button
            android:id="@+id/cam_activity_exit"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="left|top"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/round_button"
            android:drawableTop="@drawable/cam_icon_exit_to_app_rotate"
            android:textSize="14sp" />

        <Button
            android:id="@+id/cam_activity_settings"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="right|top"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/round_button"
            android:drawableTop="@drawable/cam_icon_settings"
            android:textSize="14sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:orientation="horizontal">
            <Button
                android:id="@+id/cam_activity_screenshot"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:drawableTop="@drawable/cam_icon_photo"
                android:layout_gravity="left"
                android:textSize = "14sp"
                android:text="photo"
                android:background = "@drawable/round_button"
                android:textColor = "#FFA000"
                android:layout_weight=".25"
                />

            <Button
                android:id="@+id/cam_activity_end_call"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_gravity="left"
                android:layout_weight=".25"
                android:background="@drawable/round_button"
                android:drawableTop="@drawable/cam_icon_phone_end_call"
                android:text="end"
                android:textColor="#E64A19"
                android:textSize="14sp" />

            <Button
                android:id="@+id/cam_activity_answer_call"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_gravity="left"
                android:layout_weight=".25"
                android:background="@drawable/round_button"
                android:drawableTop="@drawable/cam_icon_phone_answer_call"
                android:text="answer"
                android:textColor="#689F38"
                android:textSize="14sp" />
            <Button
                android:id="@+id/cam_activity_open_gate"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_alignParentBottom="true"
                android:drawableTop="@drawable/cam_icon_open"
                android:layout_gravity="right"
                android:textSize = "14sp"
                android:text="open"
                android:background = "@drawable/round_button"
                android:textColor = "#FF1976D2"
                android:layout_weight=".25"/>

        </LinearLayout>
    </org.videolan.libvlc.util.VLCVideoLayout>

</FrameLayout>
